
.container {
  padding: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.input-group text {
  display: inline-block;
  width: 80px;
}

.input-group input {
  display: inline-block;
  width: calc(100% - 100px);
  padding: 10px;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 5px;
}

.button {
  width: 100%;
  padding: 10px;
  background-color: #1cbbb4;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}
.picker {
  display: inline-block;
  width: calc(100% - 100px);
  padding: 10px;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 5px;
  
}